<body>
  <div class="game-container">
    <div class="registration" id="registration">
      <input type="text" id="playerO" placeholder="Enter Player O's name" required />
      <button onclick="startGame()">Start Game</button>
    </div>
    <div class="status">Player X's turn</div>
    <div class="board" id="board">
      <div class="cell" data-index="0"></div>
      <div class="cell" data-index="1"></div>
      <div class="cell" data-index="2"></div>
      <div class="cell" data-index="3"></div>
      <div class="cell" data-index="4"></div>
      <div class="cell" data-index="5"></div>
      <div class="cell" data-index="6"></div>
      <div class="cell" data-index="7"></div>
      <div class="cell" data-index="8"></div>
    </div>
    <button class="restart">Restart</button>
  </div>

  <script>
    const board = document.getElementById('board');
    const cells = document.querySelectorAll('.cell');
    const statusText = document.querySelector('.status');
    const restartButton = document.querySelector('.restart');
    const registration = document.getElementById('registration');

    let currentPlayer = 'X';
    let gameActive = true;
    let gameState = ['', '', '', '', '', '', '', '', ''];

    const winningConditions = [
      [0, 1, 2],
      [3, 4, 5],
      [6, 7, 8],
      [0, 3, 6],
      [1, 4, 7],
      [2, 5, 8],
      [0, 4, 8],
      [2, 4, 6]
    ];

    let playerOName = '';

    function startGame() {
      playerOName = document.getElementById('playerO').value;

      if (!playerOName) {
        alert("Please enter Player O's name.");
        return;
      }

      registration.style.display = 'none';
      board.style.display = 'grid';
      restartButton.style.display = 'block';
      statusText.textContent = `Player X's turn (Computer)`;

      if (currentPlayer === 'X') {
        setTimeout(computerMove, 500);
      }
    }

    function computerMove() {
      if (!gameActive) return;

      // Find the first available cell
      const availableCells = gameState.map((value, index) => (value === '' ? index : null)).filter(index => index !== null);
      const move = availableCells[Math.floor(Math.random() * availableCells.length)]; // Random move

      gameState[move] = 'X';
      cells[move].textContent = 'X';
      cells[move].classList.add('taken');

      if (checkWin()) {
        statusText.textContent = `Player X (Computer) wins!`;
        gameActive = false;
        return;
      }

      if (gameState.every(cell => cell !== '')) {
        statusText.textContent = "It's a draw!";
        gameActive = false;
        return;
      }

      currentPlayer = 'O';
      statusText.textContent = `${playerOName}'s (O) turn`;
    }

    function handleCellClick(event) {
      if (currentPlayer !== 'O') return;

      const cell = event.target;
      const index = cell.getAttribute('data-index');

      if (gameState[index] !== '' || !gameActive) {
        return;
      }

      gameState[index] = 'O';
      cell.textContent = 'O';
      cell.classList.add('taken');

      if (checkWin()) {
        statusText.textContent = `${playerOName} (O) wins!`;
        gameActive = false;
        return;
      }

      if (gameState.every(cell => cell !== '')) {
        statusText.textContent = "It's a draw!";
        gameActive = false;
        return;
      }

      currentPlayer = 'X';
      statusText.textContent = `Player X's turn (Computer)`;
      setTimeout(computerMove, 500);
    }

    function checkWin() {
      return winningConditions.some(condition => {
        return condition.every(index => gameState[index] === currentPlayer);
      });
    }

    function restartGame() {
      gameState = ['', '', '', '', '', '', '', '', ''];
      currentPlayer = 'X';
      gameActive = true;
      statusText.textContent = `Player X's turn (Computer)`;

      cells.forEach(cell => {
        cell.textContent = '';
        cell.classList.remove('taken');
      });

      if (currentPlayer === 'X') {
        setTimeout(computerMove, 500);
      }
    }

    cells.forEach(cell => cell.addEventListener('click', handleCellClick));
    restartButton.addEventListener('click', restartGame);
  </script>
</body>
</html>
